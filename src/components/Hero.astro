---
import GradientText from "./animations/GradientText/GradientText";
import ElectricCard from "./ElectricCard.astro";
import Footer from "./footer.astro";
---

<section class="flex flex-col md:flex-row items-center justify-center md:justify-between p-4 sm:p-6 lg:p-8 min-h-screen gap-4 md:gap-8">
  <div class="w-full md:w-1/2 space-y-4 md:space-y-6 text-center md:text-left">
    <span class="text-6xl lg:text-8xl md:text-left font-bold text-center ">
      <GradientText
        client:load
        colors={["#40ffaa", "#4079ff", "#40ffaa", "#4079ff", "#40ffaa"]}
        animationSpeed={3}
        className="leading-tight"
      >
        Welcome
      </GradientText>
      to My Astro Blog
    </span>
  </div>

  <div class="w-full md:w-1/2 flex justify-center items-center">
    <div class="relative w-64 sm:w-80 md:w-96 lg:w-[30rem] xl:w-[36rem]">
      <img 
        src="../img/astronaut-hero-img.webp" 
        alt="" 
        class="w-full h-auto object-contain transition-all duration-700 hover:scale-105 hover:rotate-2 drop-shadow-2xl" 
        loading="lazy"
        width="576"
        height="576"
      />
      
      <div class="absolute -top-2 -right-2 w-8 h-8 sm:w-12 sm:h-12 md:w-16 md:h-16 lg:w-20 lg:h-20 rounded-full bg-gradient-to-br from-cyan-400 via-blue-500 to-purple-600 opacity-20 blur-xl animate-pulse"></div>
      <div class="absolute -bottom-3 -left-3 w-6 h-6 sm:w-8 sm:h-8 md:w-12 md:h-12 lg:w-16 lg:h-16 rounded-full bg-gradient-to-br from-green-400 via-emerald-500 to-teal-600 opacity-25 blur-lg animate-bounce"></div>
      <div class="absolute top-1/2 -right-1 w-4 h-4 sm:w-6 sm:h-6 md:w-8 md:h-8 rounded-full bg-gradient-to-br from-yellow-400 to-orange-500 opacity-30 blur-md animate-ping"></div>
      
      <div class="absolute inset-0 bg-gradient-to-r from-blue-400/10 via-purple-500/10 to-cyan-400/10 rounded-full blur-3xl -z-10 scale-110"></div>
    </div>
  </div>
</section>

<section class="w-full pt-72 pb-40 "> 
  <div class="max-w-5xl ml-10 px-0 "> 
    <h2 class="text-6xl mb-16 font-bold">
      Features
    </h2>  
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-40">
      <ElectricCard
        title="Astro"
        description="We use Astro to build this website because it allows us to create fast, optimized, and modern web pages with minimal JavaScript and a great developer experience."
        image="../img/astro.png"
        buttonText="Get Started"
        href="https://astro.build"
      />
      <ElectricCard
        title="Tailwind"
        description="We use Tailwind to style this website because it lets us build beautiful, responsive, and modern interfaces quickly with utility-first CSS classes and great flexibility."
        image="../img/tailwing.png"
        buttonText="Get Started"
        href="https://tailwindcss.com"
      />
      <ElectricCard
        title="Dark mode"
        description="We use Dark Mode to enhance the user experience by allowing visitors to choose a comfortable viewing mode, making the website modern, accessible, and visually appealing."
        image="../img/DarkMode.png"
        buttonText="Get Started"
        href="https://developer.mozilla.org/en-US/docs/Web/CSS/@media/prefers-color-scheme"
      />
      <ElectricCard
        title="Markdown"
        description="We use Markdown to write content for this website because it provides a simple, readable, and flexible way to create and manage pages, making editing fast and efficient."
        image="../img/Markdown.png"
        buttonText="Get Started"
        href="https://www.markdownguide.org/"
      />
      <ElectricCard
        title="React"
        description="We use React to create interactive and dynamic components, allowing us to build a modern, scalable, and maintainable user interface for this website."
        image="../img/React.png"
        buttonText="Get Started"
        href="https://react.dev/"
      />
      <ElectricCard
        title="TypeScript"
        description="We use TypeScript to add static typing to our codebase, improving code quality, maintainability, and developer productivity throughout the project."
        image="../img/Typescript.png"
        buttonText="Get Started"
        href="https://www.typescriptlang.org/"
      />
    </div>
  </div>
</section>

<Footer/>