---
import ElectricBorder from "./animations/cards/Animations/ElectricBorder/ElectricBorder";
import ElectricButton from "./ElectricButton.astro";

const {
  title = "Astro",
  description = "",
  image = "",
  badge = "",
  tags = ["JavaScript", "Static Site", "SSR"],
  buttonText = "",
  onClick = undefined,
} = Astro.props;
---

<ElectricBorder
  color="#7df9ff"
  speed={0.5}
  chaos={0.5}
  thickness={2}
  style={{ borderRadius: 20, maxWidth: 370, margin: "0 auto" }}
>
  <div class="rounded-2xl p-8 pb-14 flex flex-col gap-4 items-center shadow-xl relative z-10 min-w-[320px] min-h-[540px] bg-transparent overflow-visible">
    {image && (
      <img src={image} alt={title} class="w-32 h-32 object-contain mb-2" />
    )}
    {badge && (
      <span class="text-xs px-3 py-1 rounded-full mb-2 opacity-80 tracking-widest bg-cyan-900/30 text-cyan-300">{badge}</span>
    )}
    <h3 class="text-2xl font-bold mb-2 text-center">{title}</h3>
    <p class="text-center mb-4 text-base font-medium">{description}</p>
    <div class="flex flex-wrap gap-2 mb-2 justify-center">
      {tags.map(tag => (
        <span class="bg-[#222c3c] text-xs px-3 py-1 rounded-full text-cyan-300">{tag}</span>
      ))}
    </div>
    {buttonText && (
      <ElectricButton onClick={onClick} className="mt-2">
        {buttonText}
      </ElectricButton>
    )}
  </div>
</ElectricBorder>