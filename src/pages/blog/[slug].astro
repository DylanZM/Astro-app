---
import { getCollection, render } from 'astro:content'
import Layout from '@/layouts/Layout.astro'
import GradientText from "../../components/animations/GradientText/GradientText";

export async function getStaticPaths() {
    const posts = await getCollection('blog')
    return posts.map(post => ({
        params: { slug: post.slug },
        props: { post }
    }))
}

const { post } = Astro.props
const { title} = post.data

const { Content } = await render(post)
---

<Layout title={title}>
  <main class="max-w-4xl mx-auto mt-20 px-4">


    <article class="max-w-3xl mx-auto">
      <header class="mb-12 text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-6 leading-tight">
          <GradientText
        client:load
        colors={["#40ffaa", "#4079ff", "#40ffaa", "#4079ff", "#40ffaa"]}
        animationSpeed={3}
        className="leading-tight"
      >
        {title}
      </GradientText>
        </h1>
        <div class="flex items-center justify-center gap-4 text-sm text-muted-foreground">
         
        </div>
      </header>

 <div
  class="prose prose-lg prose-neutral dark:prose-invert max-w-none leading-relaxed 
    [&>h1]:text-4xl [&>h1]:font-extrabold [&>h1]:mb-8 [&>h1]:mt-12
    [&>h2]:text-3xl [&>h2]:font-bold [&>h2]:mb-6 [&>h2]:mt-10Â [&>h2]:pb-3
    [&>h3]:text-2xl [&>h3]:font-semibold [&>h3]:mb-4 [&>h3]:mt-8
    [&>h4]:text-xl [&>h4]:font-medium [&>h4]:mb-3 [&>h4]:mt-6
    [&>p]:mb-6 [&>p]:text-base [&>p]:leading-8
    [&>ul]:pl-6 [&>ul]:list-disc [&>ul]:mb-6 [&>ul]:space-y-2
    [&>ol]:pl-6 [&>ol]:list-decimal [&>ol]:mb-6 [&>ol]:space-y-2
    [&>blockquote]:border-l-4 [&>blockquote]:border-primary [&>blockquote]:pl-6 [&>blockquote]:italic [&>blockquote]:bg-accent/5 [&>blockquote]:py-4
    [&>pre]:bg-muted [&>pre]:p-4 [&>pre]:rounded-lg [&>pre]:overflow-x-auto
    [&>code]:bg-muted [&>code]:px-2 [&>code]:py-1 [&>code]:rounded [&>code]:text-sm
    [&_img]:rounded-lg [&_img]:shadow-md [&_img]:my-8
    [&_a]:text-primary [&_a]:hover:underline [&_a]:transition-colors
    [&_hr]:hr-colored
  "
>
        <Content />
      </div>
    </article>
  </main>
</Layout>