---
import Layout from "@/layouts/Layout.astro"
import GradientText from "@/components/animations/GradientText/GradientText"
---

<Layout>
  <div class="min-h-screen flex flex-col justify-center items-center">
    <div class="container mx-auto px-4 py-12">
      <div class="max-w-3xl mx-auto p-10 rounded-3xl border border-none relative overflow-hidden">
        <div class="absolute -top-10 -right-10 opacity-10 pointer-events-none select-none">
          
        </div>
        <div class="flex flex-col items-center gap-3 mb-6">
<h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold">            <GradientText
              client:load
              colors={["#40ffaa", "#4079ff", "#40ffaa", "#4079ff", "#40ffaa"]}
              animationSpeed={3}
              className="leading-tight"
            >
              About
            </GradientText>
          </h1>
        </div>
       
      </div>